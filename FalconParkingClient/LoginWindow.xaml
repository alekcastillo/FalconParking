<Window x:Class="FalconParkingClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FalconParkingClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="189" Width="240">
    <Grid>
        <Label x:Name="lblEmail" Content="Correo electronico" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Label x:Name="lblPassword" Content="Clave" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button x:Name="btnLogin" Content="Ingresar" Margin="0,0,10,9" HorizontalAlignment="Right" Width="43" Height="19" VerticalAlignment="Bottom" Click="btnLogin_Click"/>

    </Grid>
</Window>
